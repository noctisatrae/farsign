{
  "compilerOptions": {
    "target": "ES2015",                                  
    "lib": ["DOM", "ES2015"],                        
    "module": "ES2015",                                
    "moduleResolution": "node",                     
    "declaration": true,                              
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src/*"]
}
